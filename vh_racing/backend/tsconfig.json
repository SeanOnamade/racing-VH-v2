{
    "compilerOptions": {
      "target": "ES2020",
      "module": "ES2020",
      "outDir": "./dist",
      "rootDir": "./server",  // Adjust rootDir to point to the server folder
      "strict": true,
      "esModuleInterop": true,
      "moduleResolution": "node"
    },
    "include": ["server/**/*.ts"],  // Correct the path to include your TypeScript files
    "exclude": ["node_modules"]
  }
  
  